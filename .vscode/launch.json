    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Vitest: 全部测试",
            "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
            "args": ["run"],
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Vitest: 当前文件",
            "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
            "args": [
                "run",
                "${relativeFile}"
            ],
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal"
        }
    ]
}