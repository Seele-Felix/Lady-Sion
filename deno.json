{
  "importMap": "./import_map.json",
  "nodeModulesDir": "auto",
  "check": { "ignore": ["server/src/presentation/routes/**/*.ts"] },
  "tasks": {
    "start": "deno run -A server/src/main.ts",
    "start:backend": "deno run -A server/src/main.ts",
    "start:frontend": "cd web && deno task dev",
    "dev": "deno task start:backend & deno task start:frontend",
    "build": "cd web && deno task build",
    "test": "deno test --allow-read --allow-write --allow-net --allow-env",
    "test:unit:core": "deno test --allow-read whisper-framework/backend/__tests__/whisper-backend.test.ts whisper-framework/backend/__tests__/oak-integration.test.ts",
    "test:unit:full": "deno test --allow-read --allow-env --ignore=whisper-framework/examples/,whisper-framework/backend/__tests__/usage-example.test.ts",
    "test:integration": "deno test --allow-read --allow-write --allow-net --allow-env whisper-framework/examples/integration-test/",
    "test:backend": "deno test --allow-read --allow-write --allow-net --allow-env server/",
    "test:whisper": "deno test --allow-read --allow-write --allow-net --allow-env whisper-framework/",
    "test:node-flow": "deno test --allow-read --allow-write node-flow/",
    "test:frontend": "cd web && deno task test",
    "test:all": "deno test --allow-read --allow-write --allow-net --allow-env",
    "fmt": "deno fmt && cd web && deno fmt",
    "lint": "deno lint && cd web && deno lint",
    "setup": "cd web && deno install"
  },
  "workspace": ["./web", "./node-flow"],
  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any",
        "require-await",
        "no-unused-vars",
        "ban-ts-comment"
      ]
    },
    "files": { "include": ["server/", "shared/", "web/src/"] }
  },
  "fmt": {
    "files": {
      "include": ["server/", "shared/", "web/src/"]
    }
  },
  "todo_lint_exclusions": "临时排除 no-explicit-any、require-await、no-unused-vars、ban-ts-comment，后续需逐步恢复并修复"
}
