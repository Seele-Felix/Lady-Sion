-- import

basic.nodeflow

--

-- types 

double {
    Basic.double
}

int {
    double
    Basic.int
    Basic.double
}

--

-- nodes

Add {
    mode Concurrent

    in {
        a int
        b int optional
        execute Basic.Signal mode=AND
    }

    out {
        result int
        done Basic.Signal
    }
}

RandomInput {
    mode Concurrent

    in {}

    out {
        value int
        ready Basic.Signal
    }
}

--